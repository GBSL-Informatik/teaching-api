{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": ["prettier"],
  "plugins": ["prettier", "@typescript-eslint"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "arrowParens": "always",
        "bracketSpacing": true,
        "bracketSameLine": false,
        "printWidth": 110,
        "proseWrap": "never",
        "singleQuote": true,
        "trailingComma": "none",
        "tabWidth": 4
      }
    ]
  },
  "parser": "@typescript-eslint/parser"
}
