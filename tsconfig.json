{
  "compilerOptions": {
    "target": "esnext",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    // "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "types": ["node"],
    "skipLibCheck": true,
    "typeRoots": [
      "./src/types",
      "./node_modules/@types/",
      "./src/@types/"
    ]
  },
  "include": ["process.env.d.ts", "./**/*.ts"],
  "exclude": ["node_modules"]
}
